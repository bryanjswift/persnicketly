  <issueManagement>
    <system>github</system>
    <url>http://github.com/bryanjswift/persnicketly/issues#issue/</url>
  </issueManagement>

  <repositories>
    <repository>
      <id>scala-tools.org</id>
      <name>Scala-tools Maven2 Repository</name>
      <url>http://scala-tools.org/repo-releases</url>
    </repository>
    <repository>
      <id>Google Maven</id>
      <url>http://google-maven-repository.googlecode.com/svn/repository/</url>
    </repository>
    <repository>
      <id>Coda's Repo</id>
      <url>http://repo.codahale.com</url>
    </repository>
    <repository>
      <id>Bryan J Swift's Repository</id>
      <url>http://repos.bryanjswift.com/maven2/</url>
    </repository>
    <repository>
      <id>Java.net Repository for Maven</id>
      <url>http://download.java.net/maven/2/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>scala-tools.org</id>
      <name>Scala-tools Maven2 Repository</name>
      <url>http://scala-tools.org/repo-releases</url>
    </pluginRepository>
  </pluginRepositories>
  
  <dependencies>
    <dependency>
      <groupId>net.databinder</groupId>
      <artifactId>dispatch-oauth_${scala.version}</artifactId>
      <version>0.8.1</version>
    </dependency>
    <dependency>
      <groupId>com.yammer.metrics</groupId>
      <artifactId>metrics-scala_${scala.version}</artifactId>
      <version>2.0.0-BETA17</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-servlets</artifactId>
      <version>7.4.0.v20110414</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
