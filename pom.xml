      <groupId>com.mongodb.casbah</groupId>
      <artifactId>casbah-query_${scala.version}</artifactId>
      <version>2.1.5-1</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.6.1</version>
