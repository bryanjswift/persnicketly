<html>
  <head>
    #set( $title = "Be Persnicketly" )
    #set( $description = "Collecting your favorite articles on Readability." )
    #set( $ogTitle = "Persnicketly" )
    #set( $ogDescription = "Collecting Readability stars since 2011" )
    #parse("templates/head.vm")
  </head>
  <body>
    <div id="wrapper">
      <header>
        <h1>Persnicketly<span class="headerCurl"></span></h1>
      </header>
      <section>
        <div id="what">
          <h2>The best of Readability's bookmarks at your desk or on-the-go.</h2>
          <p class="description">We're collecting and curating the most favorited Readability bookmarks and serving them to you when you want them, where you want them.</p>
          <img class="hero" src="/img/chair_stars.png" alt="" />
        </div>
        <div id="when">
          #if (${user.isEmpty()})
          <h3>We're going to launch soon,</h3>
          <p class="please">but until then <strong><a href="/readability/login">sign in to Readability</a></strong> and help us get started collecting favorites.</p>
          <h4>Sign in &amp; approve Persnicketly</h4>
          <a id="signIn" class="cta" href="/readability/login">
            <img src="/img/blue_chair.png" alt="" height="29" />
            <span>Sign in to Readability</span>
          </a>
          #else
          <div id="confirm">
            <h3>Thanks for signing up to use</h3>
            <p class="serviceName">Persnicketly</p>
            <p class="notice">We'll publish a note to your reading list when we're up and running.</p>
          </div>
          #end
          <h4>Details your thing?</h4>
          <a id="learnMore" class="cta" href="/learn-more">
            <img src="/img/purple_books.png" alt="" width="33" />
            <span>Learn More</span>
          </a>
        </div>
      </section>
      <footer>
        <p>Persnicketly &copy; 2011</p>
        <a href="/learn-more">about</a>
      </footer>
    </div>
    <script src="/js/persnicketly.js"></script>
  </body>
</html>

