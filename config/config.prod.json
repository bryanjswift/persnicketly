{
  "http": {
    "domain": "persnicketly.com",
    "cookie": ".persnicketly.com",
    // The type of connector to use. Other valid values are "select_channel" or
    // "socket".
    "connector": "blocking_channel",

    // The TCP/IP port Jetty will host your server on.
    "port": 8080,

    // Maximum number of concurrent connections.
    "max_connections": 50,

    // Number of milliseconds to wait for connections to complete while
    // gracefully shutting down.
    "shutdown_milliseconds": 2000,

    // The hostname of the interface on which to listen. If not set, it will
    // listen on all available interfaces.
    // "hostname": "localhost",

    // Whether or not the server is downstream from a proxy which appends
    // X-Forwarded-For headers.
    "forwarded": false
  },

  "oauth": {
    "readability": {
      "key": "",
      "secret": ""
    },
    "instapaper": {
      "key": "",
      "secret": ""
    }
  },

  "redis": {
    "host": "web1.persnicketly.com",
    "port": 6379,
    "timeout": 0
  },

  "queue": {
    "default": {
      "host": "web1.persnicketly.com",
      "port": 5672,
      "durable": true,
      "exclusive": false,
      "autodelete": false,
      "prefetch": 1,
      "perpage": 25,
      "message": {
        "contentType": "application/octet-stream",
        "persistent": true,
        "priority": 0
      }
    }
  },

  "db": {
    "hosts": [
        { "host": "mongo1.persnicketly.com", "port": 27017 }
      , { "host": "mongo2.persnicketly.com", "port": 27017 }
      , { "host": "mongo3.persnicketly.com", "port": 27017 }
    ],
    "name": "persnicketly"
  },

  "webapp": {
    "path": "/var/www/persnicketly-webapp/",
    "context": "/"
  },

  "compute": [14, 60],

  "metrics": {
    // The TCP/IP port Jetty will expose your metrics on.
    "port": 8081
  }
}
